CONFIG_64BIT=y
CONFIG_X86_64=y
CONFIG_SMP=y
CONFIG_LOCALVERSION="-alinux"

# Processor Type and Features
CONFIG_GENERIC_CPU=y
CONFIG_X86_X2APIC=y
CONFIG_MICROCODE=y
CONFIG_MICROCODE_AMD=y
CONFIG_MICROCODE_INTEL=y
CONFIG_KVM_GUEST=y # Guest support for running in VMs

# Performance tuning
CONFIG_HZ_1000=y
CONFIG_HZ=1000
CONFIG_PREEMPT_VOLUNTARY=y
CONFIG_NO_HZ_FULL=y

# Essential features
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_TTY=y
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_UNIX=y
CONFIG_BINFMT_ELF=y
CONFIG_BLK_DEV_LOOP=y
CONFIG_RD_GZIP=y
CONFIG_DECOMPRESS_GZIP=y

# Filesystems (as modules where possible)
CONFIG_EXT4_FS=y
CONFIG_EXT4_FS_POSIX_ACL=y
CONFIG_EXT4_FS_SECURITY=y
CONFIG_VFAT_FS=y
CONFIG_FAT_FS=y
CONFIG_ISO9660_FS=y
CONFIG_SQUASHFS=y
CONFIG_SQUASHFS_ZLIB=y
CONFIG_NTFS3_FS=m # NTFS read/write
CONFIG_BTRFS_FS=m
CONFIG_F2FS_FS=m
CONFIG_XFS_FS=m

# Storage & Block Devices (as modules)
CONFIG_ATA=y
CONFIG_SATA_AHCI=m
CONFIG_NVME_CORE=m
CONFIG_NVME_BLOCK=m
CONFIG_SCSI_SUPPORT=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_SR=m # CD-ROM support
CONFIG_BLK_DEV_MD=m # Software RAID/LVM/DM

# USB
CONFIG_USB_SUPPORT=y
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_STORAGE=m
CONFIG_USB_HID=m
CONFIG_USB_PRINTER=m # Printer support
CONFIG_USB_NET_DRIVERS=m # USB Ethernet/tethering
CONFIG_USB_RTL8150=m
CONFIG_USB_RTL8152=m

# Input (Laptop/PS2 as modules)
CONFIG_INPUT=y
CONFIG_INPUT_KEYBOARD=y
CONFIG_INPUT_MOUSE=y
CONFIG_INPUT_EVDEV=y
CONFIG_SERIO_I8042=y # Essential: i8042 keyboard/controller
CONFIG_MOUSE_PS2_ALPS=m
CONFIG_MOUSE_PS2_ELANTECH=m
CONFIG_MOUSE_PS2_SYNAPTICS=m

# Networking Core
CONFIG_NET=y
CONFIG_INET=y
CONFIG_PACKET=y
CONFIG_NETDEVICES=y
CONFIG_ETHERNET=y
CONFIG_NET_VENDOR_INTEL=m
CONFIG_E1000=m
CONFIG_E1000E=m
CONFIG_NET_VENDOR_REALTEK=m
CONFIG_8139TOO=m
CONFIG_R8169=m

# Networking (Wireless)
CONFIG_WIRELESS=y
CONFIG_WLAN=y
CONFIG_CFG80211=m
CONFIG_MAC80211=m
CONFIG_IWLWIFI=m # Intel
CONFIG_ATH9K=m # Atheros
CONFIG_BRCMFMAC=m # Broadcom

# Sound (ALSA as modules)
CONFIG_SND=m
CONFIG_SND_HRTIMER=m
CONFIG_SND_HDA_INTEL=m
CONFIG_SND_USB_AUDIO=m
CONFIG_SOUND_OSS_CORE=y
CONFIG_AC97_BUS=m

# DRM/Graphics (as modules)
CONFIG_DRM=y
CONFIG_DRM_FBDEV_EMULATION=y
CONFIG_FB=y
CONFIG_FRAMEBUFFER_CONSOLE=y
CONFIG_LOGO=y
CONFIG_LOGO_LINUX_CLUT224=y
CONFIG_DRM_BOCHS=y
CONFIG_DRM_I915=m
CONFIG_DRM_AMDGPU=m
CONFIG_DRM_RADEON=m
CONFIG_DRM_NOUVEAU=m

# Virtualization (as modules)
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_NET=m
CONFIG_VIRTIO_BLK=m
CONFIG_VIRTIO_MMIO=y
CONFIG_VIRTIO_GPU=m

# EFI
CONFIG_EFI=y
CONFIG_EFI_STUB=y
CONFIG_EFI_VARS=y

# Security
CONFIG_SECURITY=y
CONFIG_SECURITYFS=y
